<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>

  <h3>This category is empty currently</h3>
  
<% else %>

  <div class="row">

  <% @books.each do |book| %>

    <div class="col-md-3">
    <a href="<%= book_path(book.id) %>">
      <%= image_tag book.book_img.url(:book_index) %>
    </a>    
    </div>

  <% end %>

  </div>

<% end %>
